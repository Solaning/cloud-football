<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <include layout="@layout/smssdk_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    
        android:orientation="vertical"
        android:paddingLeft="16dip"
        android:paddingRight="16dip" >

        <TextView
            android:id="@+id/tv_identify_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:text="@string/smssdk_make_sure_mobile_detail"
            android:textColor="@android:color/white"
            android:textSize="15sp" 
           />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dip"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dip"
            android:layout_marginTop="19dip"
         android:background="#662F414C"
            android:orientation="horizontal" >
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="验证码"
    android:textSize="16sp"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:textColor="#648792"
    

    />
            <EditText
                android:id="@+id/et_put_identify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dip"
              android:layout_weight="1"
              android:paddingLeft="5dp"
             android:background="@null"
                android:singleLine="true"
                  android:textColor="@android:color/white"
                android:inputType="number" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/smssdk_clear_search"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/btn_sounds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="点击发送语音验证"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/smssdk_white"
                android:background="@drawable/btn_next_selector"
             

                android:visibility="visible" />

</LinearLayout>

        <TextView
            android:id="@+id/tv_unreceive_identify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:text="@string/smssdk_receive_msg"
            android:textColor="#5c5c5c"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="48dip"
          android:background="@drawable/btn_next_selector"
            android:text="@string/smssdk_next"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>