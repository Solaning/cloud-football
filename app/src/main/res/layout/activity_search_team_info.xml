<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_nav_button" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dip" >
                <ImageView
                    android:id="@+id/iv_family_photo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:maxHeight="250dip"
                    android:minHeight="150dip"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_family_photo"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@+id/iv_badge"
                    android:textColor="@android:color/white" />
                <!-- android:maxHeight="60dp"
                    android:maxWidth="60dp" -->
                <ImageView
                    android:id="@+id/iv_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView1"
                    android:layout_marginRight="58dp"
                    android:scaleType="fitXY"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:src="@drawable/team_bage_default" />
            </RelativeLayout>
            
            <LinearLayout
                android:id="@+id/llt_team_name"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/about_top_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/team_name"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_first_captain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/first_captain"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <RelativeLayout 
                    android:id="@+id/lv_first_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    >
                    
                    <TextView
                        android:id="@+id/text_first_caption_name"
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:layout_centerVertical="true"
                    	android:text="队长名"
                    	/>
                    <ImageView
                        android:layout_toRightOf="@id/text_first_caption_name"
                    	android:id="@+id/iv_first_captain"
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:src="@drawable/icon_default_head" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_second_captain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/second_captain"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>
                <RelativeLayout 
                    android:id="@+id/lv_second_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical">
                    
                    <TextView
                        android:id="@+id/text_second_caption_name"
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:layout_centerVertical="true"
                    	android:text="队副名"
                    	/>
                    <ImageView
                        android:layout_toRightOf="@id/text_second_caption_name"
                    	android:id="@+id/iv_second_captain"
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:layout_gravity="right|center_vertical"
                    	android:duplicateParentState="true"
                    	android:src="@drawable/icon_default_head" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_team_member_number"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/member_number"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_member_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_team_home"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:visibility="gone"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/team_home"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_team_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_team_region"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/region"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_team_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_team_founded_time"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/founded_time"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_team_founded_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_team_description"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/description"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_team_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_team_slogan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/about_mid_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/slogan"
                    android:textColor="@drawable/selector_letter"
                    android:textSize="@dimen/sp_18" >
                </TextView>

                <TextView
                    android:id="@+id/tv_team_slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:duplicateParentState="true" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>