<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    
  <View
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" >
    </View>
  <RelativeLayout
        android:id="@+id/rlt_team_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:minHeight="70dp"
        android:padding="10dp" >

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/mine_head_icon" />

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/register_bottom_arrow" />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" >
    </View>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" 
        android:layout_marginTop="20dp">
    </View>
     <RelativeLayout
         android:id="@+id/rlt_nick"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/btn_selector"
         android:minHeight="50dp"
         android:padding="10dp" 
         android:onClick="btnOnClick">

         <TextView
             style="@style/Smile.TextView._Black"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:text="@string/mine_nick" />

         <TextView
             android:id="@+id/textView2"
             style="@style/Smile.TextView._Black"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:drawablePadding="10dp"
             android:drawableRight="@drawable/register_bottom_arrow" />

         <TextView
             android:id="@+id/tv_nick"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/textView2"
             android:text="@string/mine_nick" />
     </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" 
        />
         
         <RelativeLayout
             android:id="@+id/rlt_sex"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/btn_selector"
         android:minHeight="50dp"
         android:padding="10dp"
          android:onClick="btnOnClick" >

         <TextView
             style="@style/Smile.TextView._Black"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:text="@string/mine_sex" />

         <TextView
             android:id="@+id/tv_arr1"
             style="@style/Smile.TextView._Black"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:drawablePadding="10dp"
             android:drawableRight="@drawable/register_bottom_arrow" />

         <TextView
             android:id="@+id/tv_sex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/tv_arr1"
             android:text="ç”·" />
     </RelativeLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" 
        >
    </View>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" 
        android:layout_marginTop="20dp">
    </View>
     <RelativeLayout
         android:id="@+id/rlt_email"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/btn_selector"
         android:minHeight="50dp"
         android:padding="10dp" 
          android:onClick="btnOnClick">
			
         <TextView
             style="@style/Smile.TextView._Black"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:text="@string/mine_email" />

         <TextView
             android:id="@+id/tv_"
             style="@style/Smile.TextView._Black"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:drawablePadding="10dp"
             android:drawableRight="@drawable/register_bottom_arrow" />

         <TextView
             android:id="@+id/tv_email"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/tv_"
             android:layout_toLeftOf="@+id/tv_"
             android:text="@string/mine_nick" />

     </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" 
       />
    
</LinearLayout>
