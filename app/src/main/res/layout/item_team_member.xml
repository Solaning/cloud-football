<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rtl_team_member_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_background"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="2.0dip"
    android:paddingTop="8.0dip" >

    <ImageView
        android:id="@+id/iv_team_member_picture"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_marginLeft="13.0dip"
        android:adjustViewBounds="true"
        android:padding="2.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/icon_default_head" />

	<ImageView
	    android:id="@+id/iv_arrow_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_margin="@dimen/dp_8"
		android:duplicateParentState="true"
		android:src="@drawable/selector_arrow_black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/iv_team_member_picture"
        android:layout_toLeftOf="@id/iv_arrow_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_team_member_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="巴塞罗那"
            android:textColor="@color/black"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tv_team_member_description"
            android:layout_width="fill_parent"
            android:text="其他介绍。。"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14.0sp" />
    </LinearLayout>

</RelativeLayout>