<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkblue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4" >

        <TextView
            android:id="@+id/tv_share_mm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_share_weixin"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/white" />
        
        <TextView
            android:id="@+id/tv_share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_wx_timeline"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_share_qq"
            android:gravity="center"
            android:text="QQ"
            android:visibility="gone"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_share_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_share_weibo"
            android:gravity="center"
            android:text="新浪微博"
            android:visibility="gone"
            android:textColor="@color/white" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/base_horization_line"
        android:focusable="false" />
    
    <TextView 
        android:id="@+id/tv_quit_share"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:background="@drawable/btn_selector"
		android:text="取消"
		android:clickable="true"
		android:textColor="@color/white"
		android:padding="13dp"
        />

</LinearLayout>