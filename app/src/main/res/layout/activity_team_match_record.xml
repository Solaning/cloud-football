                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:textColor="#fffefa"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </LinearLayout>

