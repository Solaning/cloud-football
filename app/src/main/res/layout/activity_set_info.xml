<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:id="@id/viewGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:minHeight="70dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="头像"
                    android:textColor="@color/system_text_color" />

                <com.kinth.football.view.RoundImageView
                    android:id="@+id/iv_set_avator"
                    style="@style/Smile.ImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="2.0dip"
                    android:scaleType="centerCrop"
                    imagecontrol:border_inside_color="#ffffff"
                    imagecontrol:border_outside_color="#fffefa"
                    imagecontrol:border_thickness="1dp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_account"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true" >

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="账号"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_account"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#66ffffff" />

            <LinearLayout
                android:id="@+id/layout_nick"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true">

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/add_nick"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_nick"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/about_mid_bg"
                android:padding="10dp"
                android:visibility="gone" >

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/add_name" />

                <TextView
                    android:id="@+id/tv_set_name"
                    style="@style/Smile.TextView._Black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#66ffffff" />

            <LinearLayout
                android:id="@+id/layout_age"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true">

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="生日"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#66ffffff" />

            <LinearLayout
                android:id="@+id/layout_gender"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/add_gender"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_height"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="身高"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_height"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#66ffffff" />

            <LinearLayout
                android:id="@+id/layout_weight"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="体重"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_weight"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_position"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true" >

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="位置"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_positon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true" >

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/email"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                   
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#66ffffff" />

            <LinearLayout
                android:id="@+id/layout_erea"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true">

                <TextView
                    style="@style/Smile.TextView._Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="地区"
                    android:textColor="@color/system_text_color" />

                <TextView
                    android:id="@+id/tv_set_erea"
                    style="@style/Smile.TextView._Black"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/white" />

                <ImageView
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/action_settings"
                    android:paddingRight="10dp"
                    android:src="@drawable/img_to" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>