<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:paddingTop="5dp" >

    <com.kinth.football.view.RoundImageView
        android:id="@+id/matchdetail_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="2.0dip"
        android:src="@drawable/icon_head"
        imagecontrol:border_inside_color="#ffffff"
        imagecontrol:border_outside_color="#fffefa"
        imagecontrol:border_thickness="1dp" />

    <TextView
        android:id="@+id/matchdetail_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchdetail_img"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:text="名字"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/tv_captain_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/matchdetail_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/tv_number_tips"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:background="@drawable/bg_jerseynum"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>